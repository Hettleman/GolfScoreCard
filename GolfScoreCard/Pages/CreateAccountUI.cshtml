@page
@model GolfScoreCard.Pages.CreateAccountUIModel
@{
ViewData["Title"] = "Create Account";
}

<section class="hero">
    <nav class="hero-nav">
        <div class="logo">
            <a href="/" class="nav-logo">ParPal</a>
        </div>
        <div class="nav-links">
            <a href="/LoginUI">Login</a>
            <a href="/CreateAccountUI">Create Account</a>
        </div>
    </nav>

    <div class="hero-overlay">
        <div class="hero-content">
            <h1>Create Your Account</h1>
            <form method="post" class="auth-form">
                @Html.AntiForgeryToken()
                <input name="Username" placeholder="Username" required/>
                <input type="password" name="Password" placeholder="Password" required/>
                <select name="Sex" required>
                    <option value="">Select Sex</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <input type="number" name="Handicap" step="0.1" placeholder="Handicap" required/>
                <button type="submit">Sign Up</button>
            </form>

            @if (!ViewData.ModelState.IsValid)
            {
            <p style="color: red;">@ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage</p>
            }
        </div>
    </div>
</section>
