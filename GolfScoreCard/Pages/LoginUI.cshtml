@page
@model GolfScoreCard.Pages.LoginUIModel

<section class="hero">
    <nav class="hero-nav">
        <div class="logo">
            <a href="/" class="nav-logo">ParPal</a>
        </div>
        <div class="nav-links">
            <a href="/LoginUI">Login</a>
            <a href="/CreateAccountUI">Create Account</a>
        </div>
    </nav>

    <div class="hero-overlay">
        <div class="hero-content">
            <h1>Welcome Back</h1>
            <form method="post" class="auth-form">
                @Html.AntiForgeryToken()
                <input name="Username" placeholder="Username" required />
                <input name="Password" type="password" placeholder="Password" required />
                <button type="submit">Log In</button>
            </form>

            @if (!ViewData.ModelState.IsValid)
            {
            <p style="color: red;">@ViewData.ModelState[string.Empty]?.Errors.FirstOrDefault()?.ErrorMessage</p>
            }
        </div>
    </div>
</section>
