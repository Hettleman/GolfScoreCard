@* Existing hero markup *@
<section class="hero">
    <nav class="hero-nav">
        <div class="logo">
            <a href="/" class="nav-logo">ParPal</a>
        </div>
        <div class="nav-links">
            @if (Context.Session.GetString("username") != null)
            {
            <span class="nav-username">@Context.Session.GetString("username")</span>
            <a href="/Logout">Logout</a>
            }
            else
            {
            <a href="/LoginUI">Login</a>
            <a href="/CreateAccountUI">Create Account</a>
            }
        </div>
    </nav>

    <div class="hero-overlay">
        <div class="hero-content">
            <h1>Track Your Round.<br />Lower Your Score.</h1>
            <p>
                Easily input scores for any golf course in America,<br />
                keep a record of your rounds, and view your handicap.
            </p>

            <!-- SEARCH BAR -->
            <div class="search-wrapper">
                <input
                    type="text"
                    id="courseSearch"
                    placeholder="Search a golf course..."
                />
                <div id="dropdown" class="dropdown-list"></div>
            </div>

            <!-- NEW BUTTON CTA -->
            <div class="hero-cta">
                <a href="/scorecard" class="btn btn-primary">
                    Enter Your Round
                </a>
            </div>
        </div>
    </div>
</section>
